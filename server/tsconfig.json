{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    /* Modules */
    "rootDir": "src",

    /* Emit */
    "outDir": "dist",

    /* Type Checking */
    "noEmitOnError": true /* Optional: only emit files if there are no errors */
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"],

  /* Paths for Custom Type Definitions */
  "typeRoots": ["./node_modules/@types", "./src/types"]
}
